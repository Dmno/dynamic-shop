{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <form method="post" style=" width: 400px; margin: auto;">
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, go to the <a href="{{ path('main') }}">Main page</a> or <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Register</h1>
        {{form_start(form)}}
        {{form_errors(form)}}
        {{form_widget(form)}}
        {{form_end(form)}}

        <div class="text-center">Already have an account? <a href="{{ path('app_login') }}">Login</a></div>
    </form>
{% endblock %}